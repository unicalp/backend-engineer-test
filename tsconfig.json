{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,

    // This is the magic key for our build system:
    "allowImportingTsExtensions": true, 

    "noEmit": true, 
    "esModuleInterop": true
  }
}